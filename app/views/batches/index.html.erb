<% unless user_signed_in? %>
  <div class="col-md-8 col-md-offset-2">
    <div class="tagline">Track your rudiments. Tame those drums.</div>
    <div class="tagline_desc">Rudimentor helps you record your ability and endurance on each of the 40 drum rudiments</div><br/>
  </div>
<% else %>
  <h1>My Rudiments</h1>
<% end %>

<div class="col-md-8 col-md-offset-2">

  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="setOne">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Set I
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="setOne">
        <div class="panel-body">
          <table class="table table-striped table-responsive">
            <tbody>
              <% @batches.limit(10).each do |batch| %>
                <%= render(partial: "batches/batchSet", locals: {:batch => batch}) %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="setTwo">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Set II
            </a>
          </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="setTwo">
          <div class="panel-body">
            <table class="table table-striped table-responsive">
              <tbody>
                <% @batches.limit(10).offset(10).each do |batch| %>
                  <%= render(:partial => "batches/batchSet", :locals => {:batch => batch}) %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="setThree">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
              Set III
            </a>
          </h4>
        </div>
        <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="setThree">
          <div class="panel-body">
            <table class="table table-striped table-responsive">
              <tbody>
                <% @batches.limit(10).offset(20).each do |batch| %>
                  <%= render(:partial => "batches/batchSet", :locals => {:batch => batch}) %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="setFour">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
              Set IV
            </a>
          </h4>
        </div>
        <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="setFour">
          <div class="panel-body">
            <table class="table table-striped table-responsive">
              <tbody>
                <% @batches.limit(10).offset(30).each do |batch| %>
                  <%= render(:partial => "batches/batchSet", :locals => {:batch => batch}) %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    </div>

  <!-- Video Modal -->
  <div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Watch and learn</h4>
        </div>
        <div class="modal-body">
          <iframe width="560" height="315" frameborder="0"></iframe>
        </div>
      </div>
    </div>
  </div>
  <br/>

</div>

<% unless user_signed_in? %>
  <div class="cta row col-md-8 col-md-offset-2">
    <center>
      Watch the video, track your progress and master your technique.<br/>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success' %> and get started on all rudiments. And yes, its completely <strong><em>free!<em></strong><br/>
      Remember, 'What gets measured, gets done'.
    </center>
  </div>
<% end %>

