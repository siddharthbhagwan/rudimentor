<!DOCTYPE html>
<html>
<head>
  <title>Rudimentor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
	<div class='wrapper'>
    <div class = 'container'>
      <div class = 'col-md-12'>
        <% if flash[:notice] %>
          <p class='label label-success'><%= flash[:notice] %></p><br/>
        <% end %>
        <% if flash[:error] %>
          <p class='label label-important'><%= flash[:error] %><br/></p>
        <% end %>
        <% if flash[:info] %> 
          <p class='label label-info'><%= flash[:info] %><br/></p>
        <% end %>
        <% if alert %>
          <p class='label label-danger'><%= alert %><br/></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
