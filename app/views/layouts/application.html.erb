<!DOCTYPE html>
<html>
<head>
  <title>Rudimentor</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Josefin+Sans' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
	<div class='wrapper'>
    <div class = 'container'>
      <div class = 'col-md-12'>
        <% if flash[:notice] %>
          <p class='label label-success'><%= flash[:notice] %></p><br/>
        <% end %>
        <% if flash[:error] %>
          <p class='label label-important'><%= flash[:error] %><br/></p>
        <% end %>
        <% if flash[:info] %> 
          <p class='label label-info'><%= flash[:info] %><br/></p>
        <% end %>
        <% if alert %>
          <p class='label label-danger'><%= alert %><br/></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-59342737-3', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
